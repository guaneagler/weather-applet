/* pages/weather/weather.wxss */
.city-input-section {
  width: 95%;
  display: flex;
}
.search-icon {
  height: 85rpx;
  background-color: white;
}
.search-icon-image {
  width: 85rpx;
  height: 85rpx;
}
.search-input {
  width: 100%;
}
.input-city {
  font-size: 17pt;
	height: 85rpx;
  background-color: white;
}
.input-placeholder {
	color: #b2b2b2;
}
.weather {
  margin:20rpx auto;
  width:95%;
}
.today-weather {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 101rpx;
  margin:15rpx auto 35rpx;
}
.city-time {
  width: 100rpx;
}
.label-city {
  font-size: 15pt;
}
.label-time {
  color: #b2b2b2;
  font-size: 11pt;
}
.weather-icon-image {
  height: 50rpx;
  width: 62rpx;
}
.temperature {
  font-size:24pt;
}
.future-weather-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #888888;
  height: 60rpx;
  font-size: 14pt;
}
.future-weather-icon-image {
  height: 35rpx;
  height: 45rpx;
}
.future-weather-container {
  height: 0;
  overflow: hidden;
}
.future-weather-show {
  height: auto;
}
.today-show {
  border-bottom:1rpx solid #888888;
  padding-bottom:10rpx;
  opacity: 0.6;
}
.hot-search-cities-list {
  align-items: flex-start;
  width: 95%;
  color: #aaaaaa;
}
.hot-city {
  border-bottom:1rpx solid #ccc;
  width:100%;
  padding:7rpx 0rpx;
  margin:15rpx 0rpx;
}
